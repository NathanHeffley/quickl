html
  head
    meta(name="viewport" value="utf-8")
    title= Quickl
    link(rel="amphtml" href="https://quickl.io/amp")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(rel="stylesheet" href="/css/base.css")
  body
    header#header
      h2
        a(href="/") Quickl
    #content
      ul
        each post in posts
          li
            h2
              a(href="/" + post.slug) #{post.title}
    footer#footer
      a(class="highlight" href="https://github.com/NathanHeffley" target="_blank") Nathan Heffley
