html
  head
    meta(name="viewport" value="utf-8")
    title= Quickl
    link(rel="amphtml" href="https://quickl.io/amp")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(rel="stylesheet" href="/css/base.css")
  body
    header#header
      h2
        a(href="/") Quickl
    #content
      .post-list
        each post in posts
          a(href="/" + post.slug)
            .post-listing
              .listing-pic
                img(class="thumbnail-image" src=post.image)
              .listing-content
                h2= post.title
                h3= post.author + ' on ' + post.createdAt
    footer#footer
      a(class="highlight" href="https://github.com/NathanHeffley" target="_blank") Nathan Heffley
