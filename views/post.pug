html
  head
    meta(name="viewport" value="utf-8")
    title= postTitle + "- Quickl"
    link(rel="amphtml" href="https://quickl.io/" + postSlug + "/amp")
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(rel="stylesheet" href="/css/base.css")
  body
    header#header
      h2
        a(href="/") Quickl
    #content
      article
        img(class="featured-image" src=postImage)
        h1= postTitle
        != postContent
      footer
        h3= postAuthor + ' on ' + postCreated
        .post-list
          a(href="/" + nextPostSlug)
            .post-listing
              .listing-pic
                img(class="thumbnail-image" src=nextPostImage)
              .listing-content
                h2= nextPostTitle
                h3= nextPostAuthor + ' on ' + NextPostCreated
          a(href="/" + lastPostSlug)
            .post-listing
              .listing-pic
                img(class="thumbnail-image" src=lastPostImage)
              .listing-content
                h2= lastPostTitle
                h3= lastPostAuthor + ' on ' + lastPostCreated
    footer#footer
      a(class="highlight" href="https://github.com/NathanHeffley" target="_blank") Nathan Heffley
